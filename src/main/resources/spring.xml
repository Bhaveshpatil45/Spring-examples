<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <!-- Bean definitions for services -->
    <bean id="userService" class="com.spring.personalFinance.services.UserService" />
    <bean id="transactionService" class="com.spring.personalFinance.services.TransactionService" />

    <!-- Repositories -->
    <bean id="userRepository" class="com.spring.personalFinance.repositories.UserRepository" />
    <bean id="transactionRepository" class="com.spring.personalFinance.repositories.TransactionRepository" />

</beans>
